@model Stock


<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Add New Product To Database</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="AddProduct" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">

                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="@Model.Product.Img" ></label>
                                <input type="file" name="ProductImg" class="form-cotrol">
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="@Model.Product.Name" ></label>
                                <input asp-for="@Model.Product.Name" class="form-cotrol">
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="@Model.Product.Number" ></label>
                                <input asp-for="@Model.Product.Number" class="form-cotrol">
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="@Model.Product.Price" ></label>
                                <input asp-for="@Model.Product.Price" class="form-cotrol">
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="@Model.Product.Type" ></label>
                                <select asp-for="@Model.Product.Type" asp-items="Html.GetEnumSelectList<ProductType>()" class="form-cotrol"></select>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label asp-for="@Model.Quantity" ></label>
                                <input asp-for="@Model.Quantity" class="form-cotrol" >
                            </div>
                        </div>
                        
                        
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>